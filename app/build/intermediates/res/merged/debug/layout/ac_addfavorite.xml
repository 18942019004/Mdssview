<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_addgroup"
        style="@style/titlebar"
        android:layout_height="50dp"
        android:background="@color/bg_selectitem" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/addfavorite_addgroup_n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:text="添加收藏组"
            android:textColor="@color/black" />

        <TextView style="@style/line" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_login_btn"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <ListView
        android:id="@+id/lv_favorite"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_cancel"
        android:layout_below="@id/rl_addgroup"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:groupIndicator="@drawable/indicator_group" />

</RelativeLayout>
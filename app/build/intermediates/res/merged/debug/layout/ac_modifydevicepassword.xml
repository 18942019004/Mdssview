<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        style="@style/titlebar"
        android:elevation="2dp">

        <Button
            android:id="@+id/leftBtn"
            style="@style/nav_button"
            android:layout_marginLeft="15dp"
            android:background="@drawable/title_back_n"/>

        <TextView
            style="@style/tv_title"
            android:text="@string/title_modifypwd"/>

    </RelativeLayout>

    <TextView
        style="@style/line"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_adddevice_item_height"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            style="@style/adddevice_textview"
            android:layout_width="80dp"
            android:gravity="center"
            android:text="密码"/>

        <EditText
            android:id="@+id/et_pwd"
            style="@style/adddevice_edittext"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:inputType="text"/>

    </LinearLayout>

    <TextView style="@style/line"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_adddevice_item_height"
        android:layout_marginTop="1px"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            style="@style/adddevice_textview"
            android:layout_width="80dp"
            android:gravity="center"
            android:text="新密码"/>

        <EditText
            android:id="@+id/et_newpwd"
            style="@style/adddevice_edittext"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:inputType="text"/>

    </LinearLayout>

    <TextView style="@style/line"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/item_adddevice_item_height"
        android:layout_marginTop="1px"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            style="@style/adddevice_textview"
            android:layout_width="80dp"
            android:gravity="center"
            android:text="确认新密码"/>

        <EditText
            android:id="@+id/et_ensurepwd"
            style="@style/adddevice_edittext"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:inputType="text"/>

    </LinearLayout>

    <TextView style="@style/line"/>

    <TextView
        style="@style/line"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/btn_sure"
        style="@style/simpleTextView"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView style="@style/line"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/alarm_tab_video_h" android:state_checked="true">
        <shape>
            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp"/>

            <stroke android:width="0.5px" android:color="@color/line"/>

            <solid android:color="@color/blue"/>
        </shape>
    </item>
    <item android:drawable="@drawable/alarm_tab_video_n" android:state_checked="false">
        <shape>
            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp"/>

            <stroke android:width="0.5px" android:color="@color/line"/>

            <solid android:color="@color/white"/>
        </shape>
    </item>

</selector>
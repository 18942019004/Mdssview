<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_titlebar"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/wifi_dialog_top_wifi"
            android:gravity="center"
            android:text="@string/wifisetting_synac_to_device"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_login_edittext">

        <EditText
            android:id="@+id/wifi_enter_ssid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="@string/wifisetting_enter_ssid"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/wifi_logo_ssid"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_login_edittext">

        <EditText
            android:id="@+id/wifi_enter_pass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="@string/wifisetting_enter_pass"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/wifi_logo_password"/>
    </RelativeLayout>

    <CheckBox
        android:id="@+id/ck_show_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="25dp"
        android:text="@string/wifisetting_show_pass"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <RelativeLayout
        android:id="@+id/show_selecter_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/btn_async_cancel"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_login_btn"
            android:text="@string/wifisetting_cancel"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_async_sure"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_login_btn"
            android:text="@string/wifisetting_ok"
            android:textColor="@color/black"
            android:textSize="18sp"/>
    </RelativeLayout>

</LinearLayout>